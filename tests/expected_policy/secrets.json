{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "readParams",
            "Effect": "Allow",
            "Action": [
                "ssm:DescribeParameters",
                "ssm:GetParameter",
                "ssm:GetParameters",
                "ssm:GetParameterHistory",
                "ssm:GetParametersByPath"
            ],
            "Resource": [
                "arn:aws:ssm:*:*:parameter/alpha/airflow/an_iam_role_name/*"
            ]
        },
        {
            "Sid": "allowDecrypt",
            "Effect": "Allow",
            "Action": [
                "kms:Decrypt"
            ],
            "Resource": [
                "arn:aws:kms:::key/*"
            ]
        },
        {
            "sid" : "ListAccountAliasDBT",
            "effect" : "Allow",
            "actions" : ["iam:ListAccountAliases"],
            "resources": ["*"]
        },
        {
            "sid" : "ListAllBucketDBT",
            "effect" : "Allow",
            "actions" : ["s3:ListAllMyBuckets", "s3:GetBucketLocation"],
            "resources": ["*"]
        },
        {
            "sid" : "LakeFormationGetDataAccess",
            "effect" : "Allow",
            "actions" : "lakeformation:GetDataAccess",
            "resources": ["*"]
        }
    ]
}